<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>

<div class="card">
  <div class="card-header">
    <h1><%= post.title %></h1>
  </div>
  <div class="card-body">
    <p class="card-text">
      <%=post.content.substring(0, 100) + " ..."%>
    </p>
    <button class="btn btn-success"><a href="/posts/<%=post._id%>">Read More</a></button>

  </div>
</div>
<br />
<br />

<% }) %> <%- include("partials/footer"); -%>